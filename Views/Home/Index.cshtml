
<div class="container">
    <form id="join">
        <h2>Join Availity</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="first">First Name</label>
                    <input required type="text" class="form-control" placeholder="" id="first">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="last">Last Name</label>
                    <input required type="text" class="form-control" placeholder="" id="last" >
                </div>
            </div>
                   </div>


        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="NPINumber">NPI Number</label>
                    <input required type="number" class="form-control" placeholder="" id="NPINumber">
                </div>


            </div>
      

            <div class="col-md-6">

                <div class="form-group">
                    <label for="phone">Phone Number</label>
                    <input required type="tel" class="form-control" id="phone" placeholder="123-456-7897" pattern="[0-9]{3}[0-9]{3}[0-9]{4}">
                </div>
            </div>
         
        </div>
    


        <div class="row">
            <div class="col-md-6">

                <div class="form-group">
                    <label for="email">Email address</label>
                    <input required type="email" class="form-control" id="email" placeholder="email" pattern="(?:[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*|"(?:[\x01-\x08\x0b\x0c\x0e-\x1f\x21\x23-\x5b\x5d-\x7f]|\\[\x01-\x09\x0b\x0c\x0e-\x7f])*")@(?:(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?|\[(?:(?:(2(5[0-5]|[0-4][0-9])|1[0-9][0-9]|[1-9]?[0-9]))\.){3}(?:(2(5[0-5]|[0-4][0-9])|1[0-9][0-9]|[1-9]?[0-9])|[a-z0-9-]*[a-z0-9]:(?:[\x01-\x08\x0b\x0c\x0e-\x1f\x21-\x5a\x53-\x7f]|\\[\x01-\x09\x0b\x0c\x0e-\x7f])+)\])
">
                </div>
            </div>
           

            <div class="col-md-6">
                <div class="form-group">
                    <label for="BusinessAddress">Business Address</label>
                    <input required type="text" class="form-control" id="BusinessAddress" placeholder="business address">
                </div>

            </div>
         
        </div>
   


        <button type="submit" class="btn btn-primary" id="JoinAvaility">Join Availity!</button>
    </form>
</div>
@section scripts{
    <script src="~/Scripts/Register.js"></script>
    <script type="text/javascript">
        (function ($) {
            Register.Initialize();
        }
            (jQuery));
    </script>
    
    }